<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.github.dimkr.gplaces</id>
  <metadata_license>FSFAP</metadata_license>
  <project_license>GPL-3.0+</project_license>
  <name>gplaces</name>
  <summary> A terminal based Gemini client</summary>

  <description>
    <p>
       gplaces is a light Gemini client with a high power to weight ratio. In a tiny package, it features:
    </p>
    <ul>
       <li>A VT100-compatible shell with completion, history and hints</li>
       <li>.gmi subscriptions</li>
       <li>TOFU</li>
       <li>Generation of client certificates</li>
       <li>Slightly prettified Gemtext output</li>
    </ul>
  </description>

  <launchable type="desktop-id">com.github.dimkr.gplaces.desktop</launchable>

  <url type="homepage">https://github.com/dimkr/gplaces</url>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/dimkr/gplaces/gemini/prompt.png</image>
      <caption>Prompt</caption>
    </screenshot>
  </screenshots>

  <releases>
    <release date="2022-04-29" version="0.16.2">
      <description>
        <ul>
          <li>Smarter choice of default download filename</li>
          <li>Link URLs are now shown in hints</li>
          <li>If download_dir is empty, the fallback is $XDG_DOWNLOAD_DIR, ~/Downloads or ~</li>
          <li>The range of link IDs is now shown in a hint</li>
        </ul>
      </description>
    </release>

    <release date="2022-04-28" version="0.16.1">
      <description>
        <p>Moved files from ~ to $XDG_{CONFIG,DATA}_HOME</p>
      </description>
    </release>

    <release date="2022-04-25" version="0.16.0">
      <description>
        <p>First release</p>
      </description>
    </release>
  </releases>

  <provides>
    <binary>gplaces</binary>
  </provides>

  <content_rating type="oars-1.1"/>
</component>